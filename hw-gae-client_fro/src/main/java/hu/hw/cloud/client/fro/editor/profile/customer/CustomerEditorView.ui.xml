<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
	xmlns:ma="urn:import:gwt.material.design.addins.client"
	xmlns:profile="urn:import:hu.hw.cloud.client.fro.editor.profile">

	<ui:style>
	.pp {
		padding-top: 20px;
		padding-bottom: 8px;
		margin-left: 10px;
		margin-right: 10px;
	}
	
	.dataGroupBox {
		margin-top: 8px;
		margin-bottom: 8px;
		padding-left: 10px;
		border-left: 3px solid #e91e63;
	}
	
	.dataGroupTitle {
		color: #e91e63;
		float: left;
	}
	
	.saveButton {
		margin-bottom: 18px;
	}
	
	.clearBothx {
		clear: both;
	}
	</ui:style>

	<ui:with field="i18nCore"
		type="hu.hw.cloud.client.core.i18n.CoreMessages" />

	<ui:with field="coreTokens"
		type="hu.hw.cloud.client.core.CoreNameTokens" />

	<ui:with field="froTokens"
		type="hu.hw.cloud.client.fro.FroNameTokens" />

	<g:HTMLPanel addStyleNames="{style.pp}">
		<m:MaterialRow>
			<m:MaterialColumn grid="s12 m6">

				<m:MaterialTextBox ui:field="name" type="TEXT"
					label="{i18nCore.roomTypeEditorFloor}" />

				<m:MaterialTextBox ui:field="code" type="TEXT"
					label="{i18nCore.roomTypeEditorCode}" />

				<!-- KOMMUNIKÁCIÓ -->
				<g:HTMLPanel ui:field="communicationPanel"
					addStyleNames="{style.dataGroupBox}">
					<g:Label text="{i18nCore.customerEditorCommunication}"
						addStyleNames="{style.dataGroupTitle}" />
					<m:MaterialIcon ui:field="addCommunication"
						iconType="ADD_BOX" waves="DEFAULT" backgroundColor="WHITE"
						textColor="BLACK" float="RIGHT" />
					<profile:CommunicationListEditor
						ui:field="communicationDtos" addStyleNames="{style.clearBothx}" />
				</g:HTMLPanel>
			</m:MaterialColumn>

			<m:MaterialColumn grid="s12 m6">
				<!-- CÍMEK -->
				<g:HTMLPanel ui:field="addressPanel"
					addStyleNames="{style.dataGroupBox}">
					<g:Label text="{i18nCore.customerEditorAdresses}"
						addStyleNames="{style.dataGroupTitle}" />
					<m:MaterialIcon ui:field="addAddress"
						iconType="ADD_BOX" waves="DEFAULT" backgroundColor="WHITE"
						textColor="BLACK" float="RIGHT" />
					<profile:AddressListEditor
						ui:field="postalAddressDtos" addStyleNames="{style.clearBothx}" />
				</g:HTMLPanel>
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialButton ui:field="saveButton"
			text="{i18nCore.comSave}" float="RIGHT"
			addStyleNames="{style.saveButton}" />
		<m:MaterialButton ui:field="cancelButton"
			text="{i18nCore.comCancel}" type="FLAT" float="RIGHT" />
	</g:HTMLPanel>
</ui:UiBinder> 