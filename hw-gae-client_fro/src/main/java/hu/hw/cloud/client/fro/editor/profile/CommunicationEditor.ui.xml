<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
	xmlns:combobox="urn:import:gwt.material.design.addins.client.combobox"
	xmlns:ui2="urn:import:hu.hw.cloud.client.fro.ui">

	<ui:style
		type="hu.hw.cloud.client.fro.editor.profile.CommunicationEditor.MyStyle">
		.heightTransition {
			overflow: hidden;
			transition: max-height 0.5s ease-out;
			height: auto;
			max-height: 600px;
			width: 100%;
		}
		
		.collapsed {
			max-height: 0;
		}
		
		.marginTop20 {
			margin-top: 20px;
		}
		
		.actionIcon {
			margin-top: 20px;
			padding: 0px;
			display: block;
			width: 100%;
			text-align: right;
		}
		</ui:style>

	<ui:with field="i18nCore"
		type="hu.hw.cloud.client.core.i18n.CoreMessages" />

	<g:HTMLPanel ui:field="panel">
		<m:MaterialRow ui:field="fullPanel" marginBottom="0"
			addStyleNames="{style.heightTransition}">
			<m:MaterialTextBox ui:field="parameter" grid="s11" />

			<m:MaterialColumn grid="s1" padding="0">
				<m:MaterialIcon ui:field="detailsIcon"
					iconType="ARROW_DROP_UP" addStyleNames="{style.actionIcon}" />
				<m:MaterialIcon ui:field="placeIcon" iconType="PLACE"
					addStyleNames="{style.actionIcon}" />
				<m:MaterialIcon ui:field="deleteIcon1"
					iconType="DELETE" addStyleNames="{style.actionIcon}" />
			</m:MaterialColumn>
		</m:MaterialRow>

		<m:MaterialRow ui:field="detailsPanel" marginBottom="0"
			addStyleNames="{style.heightTransition} {style.collapsed}">

			<combobox:MaterialComboBox
				ui:field="modeCombo" grid="s6" multiple="false"
				label="{i18nCore.communicationEditorLabel}" />
			<m:MaterialCheckBox ui:field="primary" grid="s5"
				text="{i18nCore.communicationEditorPrimary}" />
			<m:MaterialIcon ui:field="closeDetails"
				iconType="UNFOLD_LESS" grid="s1" />
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 